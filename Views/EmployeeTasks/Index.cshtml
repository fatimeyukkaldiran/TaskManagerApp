@model IEnumerable<TaskManagerApp.Models.ModelEmployeeTask>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Task List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="EmployeeTasks" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Task
            </a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {

    <table class="table">
        <thead>
            <tr>
                @*<th>
                    @Html.DisplayNameFor(model => model.Employee)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Employee.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employee.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Start_Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.End_Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TaskDetails)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Employee.EmployeeId)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.LastName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Start_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.End_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaskDetails)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-id="@item.TaskId" asp-action="Edit" class="btn btn-secondary mx-2">
                                Edit
                            </a>
                            <a asp-route-id="@item.TaskId" asp-action="Details" class="btn btn-secondary mx-2">
                                Details
                            </a>
                            <a asp-route-id="@item.TaskId" asp-action="Delete" class="btn btn-secondary mx-2">
                                Delete
                            </a>
                
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
    else
    {
        <p> No Task exists.</p>
    }

</div>